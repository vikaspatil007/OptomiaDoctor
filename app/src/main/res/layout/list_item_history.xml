<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_maincontainer_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/layout_background_item"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_inner_layout_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/textColor" />

            <TextView
                android:id="@+id/txt_patientid_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/textColor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_time_title_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time :"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/txt_settime_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/green" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_date_title_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date :"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/txt_setdate_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/green" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_Status_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ed1c24"
                    android:padding="3dp"
                    android:text="Padding"
                    android:textColor="@color/white" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
